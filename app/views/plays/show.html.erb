<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @play.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @play.description %>
</p>

<p>
  <strong>Date of play:</strong>
  <%= @play.date_of_play %>
</p>

<% if @play.profile_image.present? %>
    <%= link_to( image_tag(@play.profile_image.url(:thumb)) , @play.profile_image.url)  %>
<% else %>
    <%= link_to( image_tag("fallback/default_image.png", size:"200x200") ,  image_path("fallback/default_image.png") )  %>
<% end %>

<% @play.pictures.each{ |pic| %>
    <%= link_to(image_tag(pic.url(:small_thumb)), pic.url)  %>
<% } %>

<% if can? :update, @plays %>
    <%= link_to 'Edit', edit_play_path(@play), class: 'btn btn-default' %> 
<% end %>
<%= link_to 'Back', plays_path, class: 'btn btn-default' %>
